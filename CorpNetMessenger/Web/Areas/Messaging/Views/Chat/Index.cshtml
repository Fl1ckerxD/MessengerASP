 @model ChatViewModel

<div class="chat-container">
    <!-- Левая панель: Список коллег -->
    <div class="contacts-panel">
        @await Html.PartialAsync("_ContactsPartial", Model.Contacts)
    </div>

    <!-- Правая панель: Чат -->
    <div class="chat-panel">
        @await Html.PartialAsync("_ChatPartial", Model.Chat)
    </div>
</div>