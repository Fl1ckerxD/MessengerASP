    const currentUserId = "@User.FindFirstValue(ClaimTypes.NameIdentifier)";
    const currentUserRoles = @Json.Serialize(User.Claims
        .Where(c => c.Type == ClaimTypes.Role)
        .Select(c => c.Value));
</script>

